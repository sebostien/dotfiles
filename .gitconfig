[user]
  name = sebostien
  email = sebostien@proton.me
[ui "color"]
  ui = always
[color]
  ui = true
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[core]
  editor = nvim
  autocrlf = input
  excludesfile = /home/sn/.gitignore_global
  ignorecase = false
  safecrlf = warn
[alias]
  ca = commit --amend
  c = commit
  s = status
  lg = log --oneline
  sh = show HEAD
  sl = stash list
  co = checkout
  br = branch
[help]
  autocorrect = 1
[credential]
  helper = cache --timeout=3600
[init]
  defaultBranch = main
[diff]
  tool = nvimdiff
  colorMoved = default
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
  tool = nvimdiff
  conflictstyle = diff3
[merge "nvimdiff"]
  path = nvim
[g2 "panic"]
  excludes = -e .classpath -e .settings -e *.iml
[mergetool "nvimdiff"]
  trustExitCode = false
[pull]
  rebase = true
[push]
  default = current
[mergetool]
  keepBackup = false
